<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="32dp"
            android:id="@+id/leftGuideline"
    />

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="372dp"
            android:id="@+id/rightGuideline"
    />


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorPrimary"
            android:elevation="2dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/convert"
            android:layout_width="82dp"
            android:layout_height="46dp"
            android:id="@+id/convertLabel" android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#A87B51" android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/leftGuideline" app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="@string/of"
            android:layout_width="61dp"
            android:layout_height="37dp"
            android:id="@+id/ofLabel" android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#A87B51"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/leftGuideline"
            app:layout_constraintTop_toBottomOf="@+id/secondRowGuideline"/>
    <Spinner
            android:layout_width="251dp"
            android:layout_height="38dp"
            android:id="@+id/product"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintStart_toStartOf="@+id/labelGuideline"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/secondRowGuideline"
            android:elevation="3dp" android:entries="@array/products"/>
    <Button
            android:layout_width="245dp"
            android:layout_height="36dp"
            android:id="@+id/calculateButton"
            app:layout_constraintTop_toBottomOf="@+id/product" android:background="@drawable/btn_rounded"
            android:textColor="#fff"
            android:textAllCaps="false" android:text="@string/findButton"
            app:layout_constraintEnd_toStartOf="@+id/rightGuideline"
            app:layout_constraintStart_toStartOf="@+id/labelGuideline" android:layout_marginTop="8dp"
            android:elevation="3dp"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelGuideline" app:layout_constraintGuide_end="290dp"/>
    <Spinner
            android:layout_width="141dp"
            android:layout_height="47dp"
            android:id="@+id/sourceMetric"
            android:elevation="3dp"
            android:entries="@array/metrics"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" app:layout_constraintEnd_toStartOf="@id/rightGuideline"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="2dp"
            android:background="#eaedf2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:elevation="0dp"/>
    <EditText
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/quantity"
            android:text="1" android:textStyle="bold" android:gravity="center"
            android:elevation="3dp" android:background="@drawable/input_bordered"
            app:layout_constraintStart_toStartOf="@+id/labelGuideline"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:layout_marginTop="8dp"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/leftGuideline"
            app:layout_constraintEnd_toStartOf="@id/rightGuideline" app:layout_constraintBottom_toBottomOf="parent">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resultsTable">
        </TableLayout>
    </ScrollView>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="131dp"
            android:id="@+id/secondRowGuideline"/>
</android.support.constraint.ConstraintLayout>