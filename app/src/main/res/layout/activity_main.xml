<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="32dp"
            android:id="@+id/leftGuideline"
    />

    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="372dp"
            android:id="@+id/rightGuideline"
    />


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />
    <TextView
            android:text="Convert"
            android:layout_width="82dp"
            android:layout_height="47dp" tools:layout_editor_absoluteY="114dp"
            android:id="@+id/textView" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/quantity"
            android:layout_marginRight="4dp" android:textColor="#A87B51" android:gravity="center_vertical"/>
    <TextView
            android:text="of"
            android:layout_width="82dp"
            android:layout_height="37dp"
            android:id="@+id/textView2" android:textSize="18sp"
            android:textStyle="bold" android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/product"
            android:layout_marginRight="4dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:textColor="#A87B51"
            android:gravity="center_vertical"/>
    <Spinner
            android:layout_width="264dp"
            android:layout_height="38dp" tools:layout_editor_absoluteY="181dp"
            tools:layout_editor_absoluteX="110dp" android:id="@+id/product"
            android:background="@drawable/input_bordered"/>
    <Button
            android:text="Find Results"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="109dp" android:id="@+id/calculateButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/product" android:background="@drawable/btn_rounded"
            android:textColor="#fff"
            android:textAllCaps="false"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="2dp"
            android:background="#848d9b"
            tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/calculateButton"/>
    <EditText
            android:layout_width="91dp"
            android:layout_height="47dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/quantity"
            app:layout_constraintEnd_toStartOf="@+id/sourceMetric" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/product"
            android:layout_marginBottom="20dp" android:text="1" android:textStyle="bold" android:gravity="center"
            android:elevation="14dp" android:background="@drawable/input_bordered"
    />
    <ScrollView
            android:layout_width="395dp"
            android:layout_height="402dp" tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginTop="5dp">
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/resultsTable">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginTop="5dp">
                <TextView
                        android:text="0.94"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Cups (Metric)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginTop="5dp">
                <TextView
                        android:text="0.98"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Cups (US nutritional)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginTop="5dp">
                <TextView
                        android:text="1.00"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Cups (US recipes)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginTop="5dp">
                <TextView
                        android:text="8.00"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Fluid ounces (fl. oz)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="236.59"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Grams (g)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView12" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="0.23"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView13" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Kilogram (kg)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView14" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="0.23"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView15" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Liter (l)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="236.59"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Milliliter (ml)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView18" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="8.34"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView19" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Ounces (oz)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView20" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="0.52"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView21" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Pounds (lbs)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView22" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="15.77"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView23" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Tablespoons (Metric)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView24" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="16.00"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView25" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Tablespoons (US)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView26" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="50.00"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView27" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Teaspoons (Metric)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView28" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="5dp">
                <TextView
                        android:text="50.72"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content" android:id="@+id/textView29" android:layout_weight="1"
                        android:textStyle="bold" android:paddingLeft="5dp" android:textColor="#000"/>
                <TextView
                        android:text="Teaspoons (US)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView30" android:layout_weight="2"
                        android:textColor="#000"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>